{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "error",
    "quotes": ["error", "single"],
    "no-unused-vars": "error",
    "compiler-version": ["error", "^0.6"],
    "func-order": "error",
    "max-line-length": ["error", 120],
    "reason-string": ["error", { "maxLength": 64 }],
    "constructor-syntax": "error"
  }
}
