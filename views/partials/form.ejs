<div class="container">
    <div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
            <div id="content">
            <h1><%= texts.titulohash %></h1>
                <form method="POST" id="hashform" enctype="multipart/form-data">
                  <div class="mb-3">
                    <div class="custom-file">
                      <input type="file" id="hashFile" name="newhash" class="custom-file-input" required>
                      <label class="custom-file-label" for="customFileLang" data-browse="Elegir">
                      <%= texts.filehash  %>
                       </label>
                      <div class="invalid-feedback">
                        Se requiere cargar un archivo
                      </div>
                    </div>
                    <div class="form-group" style="padding-top: 1rem;">
                    <input type="text" name="id" placeholder="<%= texts.fileid %>" style="width:100%" required>
                    </div>
                    <div class="form-group" style="padding-top: 1rem;">
                    <button type='submit' formaction="/hash" id="sendHashButton" class="btn btn-light">
                    <%= texts.uploadhash %>
                    </button>
                    <button type='submit' formaction="/check" id="findHashButton" class="btn btn-light">
                    <%= texts.checkhash %>
                    </button>
          
                </form>
                <div class="text-center" id="loader">
                <div class="spinner-border" role="status">
                <span class="sr-only">Loading...</span>
              </div>
              </div>
              <div id=responseText></div>

            </div>
        </div>
        <div class="col-lg-3"></div>

    </div>
</div>