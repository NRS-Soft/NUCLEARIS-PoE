<% include partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div id="content_table">
            <div><h1>Signup</h1></div>
                <form action="/signup" method="POST" enctype="multipart/form-data">
                <div style="padding: 5px"><input type="text" name="username"></div>
                <div style="padding: 5px"><input type="password" name="password"></div>
                <div style="padding: 5px"><input type="submit"></div>
                </form>
                <% if (typeof message !== 'undefined') { %>
                <div style="color: black; font-weight:700; font-size:1.5em;"><%= message %></div>
                <% } %>
                </div>
        </div>
    </div>
</div>

<% include partials/footer %>
