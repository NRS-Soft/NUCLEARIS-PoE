<% include partials/header %>
<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <div id="content_table">
                <% if (typeof message !== 'undefined') { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <span style="color:black; font-weight:700;"><%= message %></span>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <% } %>
                <div>
                    <h1><%= texts.signup %></h1>
                </div>
                <form action="/signup" method="POST" enctype="multipart/form-data">
                    <div style="margin: 10px"><input type="text" name="username" placeholder="<%= texts.user %>"></div>
                    <div style="margin: 10px"><input type="password" name="password" placeholder="<%= texts.pwd %>">
                    </div>
                    <button type='submit' style="margin: 10px" formaction="/check" id="findHashButton" class="btn btn-light">
                        <%= texts.submit %>
                        </button>                </form>
            </div>
        </div>
    </div>
</div>

<% include partials/footer %>