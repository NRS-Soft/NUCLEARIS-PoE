{
  "name": "nuclearis-poe",
  "version": "0.1.0",
  "description": "This repo contains the development of the Nuclear PoE by NUCLEARIS.",
  "main": "src/server.js",
  "mocha": {
    "timeout": 10000
  },
  "engines": {
    "node": "10.16.3"
  },
  "scripts": {
    "start": "node dist/server.js",
    "start-client": "npm start --prefix client",
    "test": "mocha \"./test_node/*.js\"",
    "build-ts": "tsc -p tsconfig.json",
    "watch-ts": "tsc -p tsconfig.json -w",
    "postinstall": "npm run build-ts",
    "mongo-seed": "mongoimport --host localhost:27017 --db nrspoe --collection users --drop --file ./mongo-seed.json --jsonArray",
    "contract-deploy": "node ./contract-deploy.js",
    "ganache": "ganache-cli -m \"speak card review photo quote endless alpha metal long reflect angle rare\" -l 6800000 -g 65164000",
    "env-deploy": "concurrently \"npm:mongo-seed\" \"npm:ganache\" \"truffle compile\"",
    "deploy": "concurrently \"npm:contract-deploy && npm start\" \"npm:start-client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Sebastinez/NUCLEARIS-PoE.git"
  },
  "author": "Sebastinez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Sebastinez/NUCLEARIS-PoE/issues"
  },
  "homepage": "https://github.com/Sebastinez/NUCLEARIS-PoE#readme",
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.0.33",
    "axios": "^0.19.0",
    "bip32": "2.0.4",
    "bip38": "3.0.0",
    "bip39": "3.0.2",
    "bitcoinjs-lib": "5.1.6",
    "body-parser": "1.18.3",
    "bootstrap": "^4.4.1",
    "bs58": "4.0.1",
    "connect-busboy": "0.0.2",
    "dotenv": "^8.2.0",
    "ejs": "2.6.1",
    "email-templates": "^6.1.0",
    "ethereumjs-tx": "1.3.7",
    "ethereumjs-util": "6.2.0",
    "express": "4.16.4",
    "hummus-recipe": "1.8.23",
    "js-base64": "2.5.1",
    "jsonwebtoken": "8.5.1",
    "lodash.merge": "^4.6.2",
    "mongoose": "5.7.8",
    "multer": "^2.0.0-beta.1",
    "node-input-validator": "4.1.0",
    "nodemailer": "^6.3.1",
    "pdf-lib": "^1.2.1",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "web3": "1.2.2",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/bip38": "2.0.1",
    "@types/body-parser": "1.17.1",
    "@types/bs58": "4.0.0",
    "@types/clipboard": "^2.0.1",
    "@types/dotenv": "8.2.0",
    "@types/eslint": "6.1.3",
    "@types/express": "4.17.2",
    "@types/jsonwebtoken": "8.3.5",
    "@types/mongoose": "5.5.30",
    "@types/node": "12.12.6",
    "@types/nodemailer": "6.2.2",
    "@types/wif": "2.0.1",
    "@typescript-eslint/eslint-plugin": "2.6.1",
    "@typescript-eslint/parser": "2.6.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "concurrently": "^5.0.1",
    "mocha": "^7.1.1",
    "prettier": "1.18.2",
    "truffle-assertions": "0.9.2",
    "truffle-typings": "1.0.8",
    "ts-node": "8.4.1",
    "typescript": "3.7.2",
    "web3-eth-contract": "1.2.2"
  }
}
